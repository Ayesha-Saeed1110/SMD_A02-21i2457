<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddf7f7"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/bbone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/vec"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="82dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="707dp"
        android:text="My Profile"
        android:textColor="#147076"
        android:textSize="34sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="708dp"
        android:paddingLeft="80dp"
        android:src="@drawable/dots">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="194dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="507dp"
        android:background="@drawable/profiletop"
        android:contentDescription="TODO" />



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="270dp"
            android:background="#ddf7f7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/booksession"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="60dp"
                    android:onClick="openBookedSession"
                    android:backgroundTint="#ffc90a"
                    android:text="Booked Sessions"
                    android:textColor="#147076"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:onClick="openBookedSession"
                    android:backgroundTint="#ddf7f7"
                    android:text="Edit profile"
                    android:textColor="#147076"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="234dp"
                    android:layout_height="37dp"
                    android:paddingLeft="40dp"
                    android:text="Favourite Mentors"
                    android:textColor="#157177"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/john" />

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#8fd9dd"
                    android:src="@drawable/emmawhite" />

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#8fd9dd"
                    android:src="@drawable/michwhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="234dp"
                    android:layout_height="39dp"
                    android:paddingLeft="40dp"
                    android:text="My Reviews"
                    android:textColor="#157177"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#8fd9dd"
                    android:src="@drawable/gone" />

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#8fd9dd"
                    android:src="@drawable/gtwo" />

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#8fd9dd"
                    android:src="@drawable/gthree" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="234dp"
                    android:layout_height="39dp"
                    android:paddingLeft="40dp"
                    android:text="Recent Mentors"
                    android:textColor="#157177"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="39dp"
                    android:paddingLeft="70dp"
                    android:text="View All"
                    android:textColor="#157177"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="700dp"
        android:background="#147076">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/home"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/search"
            android:contentDescription="TODO" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/chat"
            android:contentDescription="TODO" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/profile"
            android:contentDescription="TODO" />

    </LinearLayout>
</RelativeLayout>