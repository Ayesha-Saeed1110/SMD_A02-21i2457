<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#50c1c8"
    >


    <ImageView
        android:layout_width="99dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="649dp"
        android:contentDescription="TODO"
        android:src="@drawable/frame" />

    <ImageButton
        android:id="@+id/vec"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/vec"
        android:contentDescription="TODO" />

    <TextView
        android:layout_width="289dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="121dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Hi, I'm"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="289dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="138dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="John Cooper"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="2dp"
        android:text="------------------------------------------------------------------------------------------"
        android:textColor="#ffffff"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="289dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="125dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Drop me a review"
        android:textColor="#ffffff"
        android:textSize="20sp">
    </TextView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="613dp"
        android:paddingLeft="50dp"
        android:src="@drawable/smiley" />

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="#ddf7f7"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="216dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:layout_width="310dp"
                android:layout_height="148dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:background="#ffffff"
                android:hint="Type your experience..."
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            </EditText>

            <ImageView
                android:layout_width="336dp"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="50dp"
                android:src="@drawable/taaray" />


        </LinearLayout>


        <Button
            android:id="@+id/buttonone"
            android:layout_width="281dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#147076"
            android:text="Submit Feedback"

            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>

</RelativeLayout>