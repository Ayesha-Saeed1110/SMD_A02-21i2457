<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ddf7f7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="140dp"
        android:background="#cbcbcb"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/camtop"
            android:contentDescription="TODO" />

    </LinearLayout>

    <TextView
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="86dp"
        android:text="Slo-mo"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="90dp"
        android:text="Square"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginBottom="87dp"
        android:text="Portrait"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#c1ecee"
        android:text="Photo"
        android:textColor="#50c1c8"
        android:textSize="18sp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="91dp"
        android:backgroundTint="#ddf7f7"
        android:text="Video"
        android:onClick="openVideo"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold">

    </Button>

    <ImageView
        android:id="@+id/me1"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/g1" />

    <ImageView
        android:id="@+id/me"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/shutter" />

    <ImageButton
        android:id="@+id/videobtn"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/g2" />



</RelativeLayout>
